<h1><%= @article.title %></h1>
<p><%= image_tag @article.image.url %></p>
<p><%= @article.body %></p>
<%= link_to "edit", edit_article_path(@article) %>
<%= link_to "delete", article_path(@article), method: :delete, data: {confirm: "Are you sure to delete the post?"} %>
